{
  "name": "@oei/alps",
  "main": "dist/alps.bundle.min.js",
  "types": "dist/alps.d.ts",
  "version": "1.1.0-alpha",
  "type": "module",
  "description": "reference application-level presentation selection implementation",
  "keywords": [
    "AC-4",
    "presentations",
    "preselections",
    "personalization",
    "flexstream"
  ],
  "homepage": "https://gitlab-sfo.dolby.net/oei/alps",
  "license": "BSD-3-Clause",
  "author": "Wolfgang Schildbach <wschi@dolby.com>",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab-sfo.dolby.net/oei/alps.git"
  },
  "scripts": {
    "build": "esbuild src/alps.js --bundle --format=esm --drop:console --drop:debugger --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=dist/alps.bundle.js",
    "build:production": "esbuild src/alps.js --bundle --format=esm --minify --drop:console --drop:debugger --target=chrome58,firefox57,safari11,edge16 --outfile=dist/alps.bundle.min.js && npm run types",
    "types": "tsc src/alps.js -d --emitDeclarationOnly --allowJs --skipLibCheck --outDir .temp && mv .temp/alps.d.ts dist && rm -r .temp",
    "test": "jest",
    "lint": "eslint",
    "docs": "jsdoc -d docs src/* README.md"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@eslint/js": "^9.8.0",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "babel-plugin-rewire": "^1.2.0",
    "esbuild": "0.23.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "codem-isoboxer": "^0.3.10"
  }
}
